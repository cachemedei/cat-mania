---
const { currentPage } = Astro.props;
---
<nav  class="hidden md:flex text-xl justify-evenly items-center w-[450px] tracking-widest h-fit"
>
<!-- Home -->
<a href="/" class="group flex flex-col h-11 w-20">
  <span>Home</span>
  {
    currentPage === '/' && (
      <img src="/icons/paw.png" alt="Active" class="w-16 ml-3 -mt-3" />
    )
  }
</a>

<!-- Adoption -->
<a href="/adoption" class="group flex flex-col h-11 w-28">
  <span>Adoption</span>
  {
    currentPage === '/adoption' && (
      <img src="/icons/paw.png" alt="Active" class="w-16 ml-11 -mt-3" />
    )
  }
</a>

<!-- Blog -->
<a href="/blog" class="group flex flex-col h-11 w-20">
  <span>Blog</span>
  {
    currentPage === '/blog' && (
      <img src="/icons/paw.png" alt="Active" class="w-16 ml-2 -mt-3" />
    )
  }
</a>

<!-- About -->
<a href="/about" class="group flex flex-col h-11 w-20">
  <span>About</span>
  {
    currentPage === '/about' && (
      <img src="/icons/paw.png" alt="Active" class="w-16 ml-4 -mt-3" />
    )
  }
